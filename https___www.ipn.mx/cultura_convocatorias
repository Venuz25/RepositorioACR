    <!-- Script para enviar al buscador gratuito -->
    <script>
    
        document.addEventListener("DOMContentLoaded", function() {
            const urlParams = new URLSearchParams(window.location.search);
            const hashes = urlParams.getAll('tab');
    
            hashes.forEach(hash => {
                const tabTrigger = document.querySelector(`button[data-bs-target="#${hash}"]`);
    
                if (tabTrigger) {
                    const tab = new bootstrap.Tab(tabTrigger);
                    tab.show();
                } else {
                    console.error(`No se encontró el elemento con el hash: #${hash}`);
                }
            });
        });
    
        let isStyleChanged = false;
        
        
        function toogleContraste(){
            
            isStyleChanged = !isStyleChanged;

            if (isStyleChanged) {
                const divs = document.querySelectorAll('div');
                divs.forEach(div => {
                    const elements = div.querySelectorAll('*');
                    div.classList.add('text-danger', 'bg-dark');
                    elements.forEach(el => {
                        el.classList.add('text-danger');
                    });
                });
            } else {
                // Restaurar estilos originales
                const divs = document.querySelectorAll('div');
                divs.forEach(div => {
                    const elements = div.querySelectorAll('*');
                    div.classList.remove('text-danger', 'bg-dark');
                    elements.forEach(el => {
                        el.classList.remove('text-danger');
                    });
                });
            }
        }
    </script>
    
